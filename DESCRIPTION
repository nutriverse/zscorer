Package: zscorer
Type: Package
Title: Child Anthropometry z-Score Calculator
Version: 0.3.1.9000
Authors@R: c(
    person("Mark", "Myatt", email = "mark@brixtonhealth.com",
           comment = c(ORCID = "0000-0003-1119-1474"),
